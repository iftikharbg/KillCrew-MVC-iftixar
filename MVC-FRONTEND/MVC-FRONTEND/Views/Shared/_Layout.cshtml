<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVC_FRONTEND</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>
    <header>
        <div class="basket">
            <span id="count">0</span>
            <i class="fas fa-shopping-basket"></i>
            <div class="basket-menu">

            </div>
        </div>

        <div class="row flex-column flex-md-row">
            <div class="col-4">
                <div class="logo-box">
                    <img src="~/images/Kill_Crew_Logo_web_410x.png" alt="logo">
                </div>
            </div>
            <div class="col-8 header-container">
                <a asp-controller="Home" asp-action="Index">HOME</a>
                <a href="#" class="tops-menu">TOPS  </a>
                <div class="tops">
                    <a href="">Hoodies</a>
                    <a href="">T-Shirts</a>
                    <a href="">Tanks / Cutoffs</a>
                    <a href="">Crew Necks</a>
                    <a href="">Jackets</a>
                </div>
                <a href="#" class="bottoms-menu">BOTTOMS </a>
                <div class="bottoms">
                    <a href="">Joggers</a>
                    <a href="">Shorts</a>
                </div>
                <a href="#" class="headwear-menu">HEADWEAR </a>
                <div class="headwear">
                    <a href="">Beanies</a>
                    <a href="">Hats</a>
                </div>
                <a href="#" class="accessories-menu">ACCESSORIES </a>
                <div class="accessories">
                    <a href="">STICKERS</a>
                </div>

                <a asp-controller="Contact" asp-action="Contact">CONTACT</a>
            </div>




        </div>


    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <section id="top">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-lg-6 footer-text">
                        <div class="logo">
                            <img src="images/Kill_Crew_Logo_web_410x.png" alt="logo">
                        </div>
                        <div class="social-media">
                            <i class="fab fa-facebook-f"></i>
                            <i class="fab fa-instagram"></i>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 footer-text">
                        <div class="contact">
                            <p>KILL CREW</p>
                            <a asp-controller="About" asp-action="About">ABOUT US</a>
                            <a href="#">FAQ</a>
                            <a asp-controller="Contact" asp-action="Contact">CONTACT</a>
                            <a href="#">RETURNS AND EXCHANGES</a>
                            <a href="#">SHIPPING</a>
                            <a href="#">TERMS</a>
                            <a href="#">PRIVACY POLICY</a>

                        </div>
                    </div>

                </div>
            </div>
        </section>
        <hr>
        <section id="bottom">
            <div class="container">
                <div class="row">
                    <div class="col-6">
                        <div class="copy-right">
                            <p>
                                © 2021 Kill Crew. Powered by Shopify
                            </p>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="exchange-rate">
                            <select name="" id="">
                                <option value="us">USD</option>
                                <option value="eu">EUR</option>
                                <option value="jp">JPY</option>
                                <option value="au">AUD</option>


                            </select>
                        </div>
                    </div>

                </div>
            </div>
        </section>
    </footer>
    <script src="https://kit.fontawesome.com/868263cec2.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/script.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
